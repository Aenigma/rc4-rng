{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015"],
    "module": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "isolatedModules": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.js"
  ]
}
